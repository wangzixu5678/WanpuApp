<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#ffffff"
             tools:context="com.example.administrator.wanpuapp.fragments.UserFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/frag_user_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView

                android:src="@mipmap/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="18dp"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/frag_user_head"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/myhead"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <TextView
            android:id="@+id/frag_user_companyname"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="公司名称"
            android:layout_below="@id/frag_user_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/frag_user_companyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/supply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#fff"
                android:layout_gravity="center"
                android:text="申请加V享特权"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#efefef"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:dividerPadding="5dp"
        android:divider="@drawable/linearlayout_dividers"
        android:showDividers="middle"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:textColor="#000000"
            android:layout_gravity="center|center_vertical"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="收藏"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView2"/>

        <TextView
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="供应"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="发布"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:background="#efefef"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
     <LinearLayout
         android:layout_marginRight="15dp"
         android:layout_marginLeft="15dp"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <LinearLayout
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
         <TextView
             android:textSize="18dp"
             android:textColor="#000"
             android:gravity="start|center_vertical"
             android:text="ID号"
             android:layout_width="wrap_content"
             android:layout_height="40dp"/>
         <TextView
             android:id="@+id/frag_user_companyid"
             android:drawablePadding="10dp"
             android:drawableRight="@mipmap/left"
             android:textSize="18dp"
             android:textColor="#666666"
             android:gravity="right|center_vertical"
             android:text="3"
             android:layout_width="match_parent"
             android:layout_height="40dp"/>
         </LinearLayout>
         <View
             android:background="#666666"
             android:layout_width="match_parent"
             android:layout_height="2px"/>
     </LinearLayout>
    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/user_item_sel"
            android:id="@+id/frag_user_changecompanyname"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18dp"
                android:textColor="#000"
                android:gravity="start|center_vertical"
                android:text="公司名称"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/frag_user_setcompanyname"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/left"
                android:textSize="18dp"
                android:textColor="#666666"
                android:gravity="right|center_vertical"
                android:text="未设置"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>
        <View
            android:background="#666666"
            android:layout_width="match_parent"
            android:layout_height="2px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/frag_user_changephonenumber"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18dp"
                android:textColor="#000"
                android:gravity="start|center_vertical"
                android:text="修改手机号"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/frag_user_phonenumber"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/left"
                android:textSize="18dp"
                android:textColor="#666666"
                android:gravity="right|center_vertical"
                android:text="13965721770"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>
        <View
            android:background="#666666"
            android:layout_width="match_parent"
            android:layout_height="2px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="18dp"
                android:textColor="#000"
                android:gravity="start|center_vertical"
                android:text="修改密码"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                />
            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/frag_user_changepassword"
                android:src="@mipmap/left"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/frag_user_changepassword"
                android:src="@mipmap/clock_little"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:background="#666666"
            android:layout_width="match_parent"
            android:layout_height="2px"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/frag_user_openvip"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="18dp"
                android:textColor="#000"
                android:gravity="start|center_vertical"
                android:text="开通会员"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/textView"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/frag_user_openvipimage"
                android:src="@mipmap/left"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/frag_user_openvipimage"
                android:src="@mipmap/v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:background="#666666"
            android:layout_width="match_parent"
            android:layout_height="2px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/frag_user_companydes"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18dp"
                android:textColor="#000"
                android:gravity="start|center_vertical"
                android:text="公司简介"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:background="#666666"
            android:layout_width="match_parent"
            android:layout_height="2px"/>
    </LinearLayout>

</LinearLayout>
